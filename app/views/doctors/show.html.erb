<h1><%= @doctor.name %> | <%= @doctor.department %></h1>
<p>Appointments:
  <ul>
    <% @doctor.appointments.each do |appointment| %>
      <li><%= appointment.appointment_datetime.strftime("%B %d, %Y at %I:%M %p") %> | <%= link_to appointment.patient.name, appointment_path(appointment) %></li>
    <% end %>
  </ul>
</p>
